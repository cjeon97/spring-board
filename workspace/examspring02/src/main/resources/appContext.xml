<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="memberDao" class="examspring02.MemberDao"/>
	
	<bean id="memberRegisterService" class="examspring02.MemberRegisterService">
		<constructor-arg ref="memberDao"/>
	</bean>
	
	<bean id="editPasswordService" class="examspring02.EditPasswordService">
		<constructor-arg ref="memberDao"/>
	</bean>
	
	<bean id="memberPrintService" class="examspring02.MemberPrintService"/>
	
	<bean id="memberListPrintService" class="examspring02.MemberListPrintService">
		<constructor-arg ref="memberDao"/>
		<constructor-arg ref="memberPrintService"/>
	</bean>
	
	<bean id="memberSearchService" class="examspring02.MemberSearchService">
		<property name="memberDao" ref="memberDao"/>
		<property name="memberPrintService" ref="memberPrintService"/>
	</bean>
	
	<bean id="versionInfoService" class="examspring02.VersionInfoService">
		<property name="majorVersion" value="7"/>
		<property name="minorVersion" value="15"/>
	</bean>
	
</beans>
